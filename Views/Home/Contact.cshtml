@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <section style="text-align: center; background-color: #8e24aa; color: white; padding: 25px 5px; margin-bottom: 10px;">
        <h1 style="margin: 0; font-size: 48px; font-weight: bold; text-transform: uppercase;">Contact Us</h1>
        <p style="font-size: 20px;">We would love to hear from you!</p>
    </section>

    <main style="padding: 40px 20px;  background-image: url('/images/contact.jpeg')">
        <!-- Contact Details -->
        <div style="max-width: 800px; margin: 0 auto; padding: 30px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
            <h2 style="font-size: 28px; color: #6a1b9a;">Get in Touch</h2>
            <p style="font-size: 18px; color: #555;"><strong>Address:</strong> University Of Sialkot, Sialkot, Pakistan</p>
            <p style="font-size: 18px; color: #555;"><strong>Email:</strong> universityofsialkot@gmail.com</p>
            <p style="font-size: 18px; color: #555;"><strong>Phone:</strong> +92-315-7759720</p>
        </div>

        <!-- Contact Form -->
        <div style="max-width: 800px; margin: 40px auto; padding: 30px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
            <h2 style="font-size: 28px; color: #6a1b9a;">Send Us a Message</h2>
            <form id="contact-form">
                <label for="name" style="font-size: 18px; color: #555;">Your Name:</label><br>
                <input type="text" id="name" name="name" placeholder="Enter your name" required style="width: 100%; padding: 12px; margin: 10px 0; border-radius: 4px; border: 1px solid #ddd; box-sizing: border-box;"><br>

                <label for="email" style="font-size: 18px; color: #555;">Your Email:</label><br>
                <input type="email" id="email" name="email" placeholder="Enter your email" required style="width: 100%; padding: 12px; margin: 10px 0; border-radius: 4px; border: 1px solid #ddd; box-sizing: border-box;"><br>

                <label for="message" style="font-size: 18px; color: #555;">Your Message:</label><br>
                <textarea id="message" name="message" placeholder="Type your message" required style="width: 100%; padding: 12px; margin: 10px 0; border-radius: 4px; border: 1px solid #ddd; height: 150px; box-sizing: border-box;"></textarea><br>

                <button type="submit" style="background-color: #8e24aa; color: white; padding: 12px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 18px; width: 100%;">Submit</button>
            </form>
        </div>

        <!-- Embedded Map -->
        <div style="max-width: 800px; margin: 40px auto;">
            <h2 style="font-size: 28px; color: #6a1b9a;">Find Us Here</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13468.653710082825!2d74.12563174077529!3d32.441560064777086!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391f18c630e857ab%3A0x49fed5d4e09526c!2sWazirabad%2C%20Gujranwala%2C%20Punjab%2C%20Pakistan!5e0!3m2!1sen!2s!4v1734432300252!5m2!1sen!2s"
                    width="100%"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy">
            </iframe>
        </div>
    </main>
</body>
 
