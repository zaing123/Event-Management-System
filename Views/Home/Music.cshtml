@{
    ViewData["Title"] = "Music";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-image: url('/images/background-image.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<body>

    <h1>Music Events</h1>

    <div id="events-list">
        <div class="event-item">
            <img src="/images/jazz-night.jpg" alt="Jazz Night">
            <div>
                <h2>Jazz Night</h2>
                <p>Enjoy a night of smooth jazz with talented musicians.</p>
                <button>Learn More</button>
            </div>
        </div>

        <div class="event-item">
            <img src="/images/rock-fest.jpg" alt="Rock Fest">
            <div>
                <h2>Rock Fest</h2>
                <p>Experience the thrill of live rock music with top bands.</p>
                <button>Learn More</button>
            </div>
        </div>

        <div class="event-item">
            <img src="/images/classical-symphony.jpg" alt="Classical Symphony">
            <div>
                <h2>Classical Symphony</h2>
                <p>Immerse yourself in a timeless classical music performance.</p>
                <button>Learn More</button>
            </div>
        </div>
    </div>

</body>